            android:layout_weight="1"
            android:background="@drawable/cell_shape" />

        <de.stefanhoth.android.got2048.widgets.SquareCellView
            android:id="@+id/grid_cell_1_4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/cell_shape" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/grid_row_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/grid_row_1">

        <de.stefanhoth.android.got2048.widgets.SquareCellView
            android:id="@+id/grid_cell_2_1"
